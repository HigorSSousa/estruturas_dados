import java.util.Scanner;

public class ConsumoCarros {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        String[] modelos = new String[5];
        double[] consumo = new double[5];
        final double DISTANCIA = 1000.0;
        final double PRECO_LITRO = 2.25;

        System.out.println("Comparativo de Consumo de Combustível");

        for (int i = 0; i < 5; i++) {
            System.out.println("Veículo " + (i + 1));
            System.out.print("Nome: ");
            modelos[i] = sc.nextLine();
            System.out.print("Km por litro: ");
            consumo[i] = sc.nextDouble();
            sc.nextLine();
        }

        double menorConsumoLitros = DISTANCIA / consumo[0];
        int indiceMaisEconomico = 0;

        System.out.println("\nRelatório Final");
        for (int i = 0; i < 5; i++) {
            double litrosNecessarios = DISTANCIA / consumo[i];
            double custo = litrosNecessarios * PRECO_LITRO;

            System.out.printf("%d - %s - %.1f - %.1f litros - R$ %.2f\n",
                    i + 1, modelos[i], consumo[i], litrosNecessarios, custo);

            if (litrosNecessarios < menorConsumoLitros) {
                menorConsumoLitros = litrosNecessarios;
                indiceMaisEconomico = i;
            }
        }

        System.out.println("\nO menor consumo é do " + modelos[indiceMaisEconomico] + ".");

        sc.close();
    }
}
